<?xml version="1.0" encoding="UTF-8"?>
<deploy xmlns="http://www.apache.org/ode/schemas/dd/2007/03" xmlns:ClientServices="ClientServices" xmlns:DriverServices="DriverServices" xmlns:ESBService="ESBService" xmlns:TrackingService="TrackingService">
  <process name="ESBService:ESBService">
    <active>true</active>
    <retired>false</retired>
    <process-events generate="all"/>
    <provide partnerLink="client">
      <service name="ESBService:ESBServiceService" port="ESBServicePort"/>
    </provide>
    <invoke partnerLink="ClientServicePL">
      <service name="ClientServices:ClientServiceService" port="ClientServicePort"/>
    </invoke>
    <invoke partnerLink="DriverPL">
      <service name="DriverServices:DriverServiceService" port="DriverServicePort"/>
    </invoke>
    <invoke partnerLink="TrackinPL">
      <service name="TrackingService:TrackinServiceService" port="TrackinServicePort"/>
    </invoke>
  </process>
</deploy>